<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/r_img"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:onClick="back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:paddingBottom="20dp"
        android:id="@+id/r_txt_1"/>
    <ImageView
        android:id="@+id/r_img1"
        android:layout_width="197dp"
        android:layout_height="189dp"
        android:layout_below="@id/r_txt_1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/barber1"
        />
    <TextView
        android:id="@+id/r_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/r_img1"
        android:layout_centerHorizontal="true"
        android:text="Sign Up Now!"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_txt_2"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/ly">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:hint="Enter your Username"
            android:paddingLeft="10dp"
            android:id="@+id/r_username"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:hint="Enter your Email"
            android:paddingLeft="10dp"
            android:id="@+id/r_email"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:hint="Create Password"
            android:paddingLeft="10dp"
            android:id="@+id/r_password"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly"
        android:width="300dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:id="@+id/r_btn_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r_btn_1"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/secondcolor"
            android:textSize="12sp"/>
    </LinearLayout>


</RelativeLayout>